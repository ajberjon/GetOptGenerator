{% extends "DafuerGetOptGeneratorBundle::layout.html.twig" %}


{% block bundle_content %}
<form action="{{ path('DafuerGetOptGeneratorBundle_project_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <h1>Edit Project</h1>
    
    <BR/><BR/><BR/>
{{ form_widget(edit_form.name, { 'attr': {'class': 'input-xxlarge', 'placeholder':'Project Name', 'style':'font-size:xx-large; font-weight: bold; height:40px'} }) }}
{{ form_widget(edit_form.description, { 'attr': {'class': 'input-xxlarge', 'placeholder':'Description', 'style':'font-size:x-large; font-weight: bold; height:30px'} }) }}


    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('DafuerGetOptGeneratorBundle_project') }}" >
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('DafuerGetOptGeneratorBundle_project_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
